<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:context="com.github.xiaofei_dev.radix.MainActivity">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTenContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="@string/input10"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/editTen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:selectAllOnFocus="true"
                android:maxLength="10"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTwoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTenContainer"
            android:layout_centerHorizontal="true"
            android:hint="@string/input2"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="34"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/editTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:selectAllOnFocus="true"
                android:maxLength="34"
                android:digits="01"
                android:ems="10"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editEightContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTwoContainer"
            android:layout_centerHorizontal="true"
            android:hint="@string/input8"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="12"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/editEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:selectAllOnFocus="true"
                android:maxLength="12"
                android:digits="01234567"
                android:ems="10"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editSixteenContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/editEightContainer"
            android:layout_centerHorizontal="true"
            android:hint="@string/input16"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="9"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/editSixteen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:selectAllOnFocus="true"
                android:maxLength="9"
                android:digits="0123456789abcdef"
                android:ems="10"
                android:inputType="textUri"/>
        </android.support.design.widget.TextInputLayout>

        <!--<TextView-->
        <!--android:id="@+id/exit"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="30dp"-->
        <!--android:textColor="@color/posColor"-->
        <!--android:text="@string/exit"-->
        <!--android:layout_below="@+id/editSixteenContainer"-->
        <!--android:layout_alignEnd="@+id/editSixteenContainer"-->
        <!--android:background="@drawable/text_bg"/>-->
    </RelativeLayout>
</ScrollView>

